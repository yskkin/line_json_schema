{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/yskkin/line-json-schema/src/messaging/message.schema.json",
  "title": "Message",
  "type": "object",
  "definitions": {
    "__sender": {
      "type": "object",
      "properties": {
        "name": { "type": "string", "maxLength": 20 },
        "iconUrl": { "type": "string", "maxLength": 1000, "format": "uri", "pattern": "^https://.*$" }
      }
    },
    "__quickReply": {
      "type": "object",
      "properties": {
        "items": {
          "type": "array",
          "maxItems": 13,
          "items": {
            "type": "object",
            "properties": {
              "type": { "const": "action" },
              "imageUrl": { "type": "string", "maxLength": 1000, "format": "uri", "pattern": "^https://.*$" },
              "action": {
                "allOf": [
                  { "$ref": "https://github.com/yskkin/line-json-schema/src/messaging/action.schema.json" },
                  {
                    "properties": {
                      "label": { "maxLength": 20 }
                    }
                  }
                ],
                "required": ["label"]
              }
            }
          }
        }
      }
    },
    "__imagemap_area": {
      "type": "object",
      "properties": {
        "x": { "type": "number", "minimum": 0 },
        "y": { "type": "number", "minimum": 0 },
        "width": { "type": "number" },
        "height": { "type": "number" }
      },
      "required": ["x", "y", "width", "height"],
      "additionalProperties": false
    },
    "text": {
      "type": "object",
      "properties": {
        "type": { "const": "text" },
        "text": { "type": "string", "maxLength": 2000 },
        "emojis": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "index": { "type": "number" },
              "productId": { "type": "string" },
              "emojiId": { "type": "string" }
            },
            "required": ["index", "productId", "emojiId"],
            "additionalProperties": false
          },
          "maxItems": 20
        }
      },
      "required": ["type", "text"],
      "additionalProperties": false
    },
    "sticker": {
      "type": "object",
      "properties": {
        "sender": { "$ref": "#/definitions/__sender" },
        "quickReply": { "$ref": "#/definitions/__quickReply" },
        "type": { "const": "sticker" },
        "packageId": { "type": "string" },
        "stickerId": { "type": "string" }
      },
      "required": ["type", "packageId", "stickerId"],
      "additionalProperties": false
    },
    "image": {
      "type": "object",
      "properties": {
        "sender": { "$ref": "#/definitions/__sender" },
        "quickReply": { "$ref": "#/definitions/__quickReply" },
        "type": { "const": "image" },
        "originalContentUrl": { "type": "string", "maxLength": 1000, "format": "uri", "pattern": "^https:\/\/.*$" },
        "previewImageUrl": { "type": "string", "maxLength": 1000, "format": "uri", "pattern": "^https:\/\/.*$" }
      },
      "required": ["type", "originalContentUrl", "previewImageUrl"],
      "additionalProperties": false
    },
    "video": {
      "type": "object",
      "properties": {
        "sender": { "$ref": "#/definitions/__sender" },
        "quickReply": { "$ref": "#/definitions/__quickReply" },
        "type": { "const": "video" },
        "originalContentUrl": { "type": "string", "maxLength": 1000, "format": "uri", "pattern": "^https:\/\/.*$" },
        "previewImageUrl": { "type": "string", "maxLength": 1000, "format": "uri", "pattern": "^https:\/\/.*$" }
      },
      "required": ["type", "originalContentUrl", "previewImageUrl"],
      "additionalProperties": false
    },
    "audio": {
      "type": "object",
      "properties": {
        "sender": { "$ref": "#/definitions/__sender" },
        "quickReply": { "$ref": "#/definitions/__quickReply" },
        "type": { "const": "audio" },
        "originalContentUrl": { "type": "string", "maxLength": 1000, "format": "url", "pattern": "^https:\/\/.*$" },
        "duration": { "type": "number" }
      },
      "required": ["type", "originalContentUrl", "duration"],
      "additionalProperties": false
    },
    "location": {
      "type": "object",
      "properties": {
        "sender": { "$ref": "#/definitions/__sender" },
        "quickReply": { "$ref": "#/definitions/__quickReply" },
        "type": { "const": "location" },
        "address": { "type": "string", "maxLength": 100 },
        "title": { "type": "string", "maxLength": 100 },
        "latitude": { "type": "number" },
        "longitude": { "type": "number" }
      },
      "required": ["type", "title", "address", "latitude", "longitude"],
      "additionalProperties": false
    },
    "imagemap": {
      "type": "object",
      "properties": {
        "type": { "const": "imagemap" },
        "baseUrl": { "type": "string", "maxLength": 1000, "format": "url", "pattern": "^https:\/\/.*$" },
        "altText": { "type": "string", "minLength": 1, "maxLength": 400 },
        "baseSize": {
          "type": "object",
          "properties": {
            "width": { "const": 1040 },
            "height": { "type": "number" }
          },
          "required": ["width", "height"],
          "additionalProperties": false
        },
        "video": {
          "type": "object",
          "properties": {
            "originalContentUrl": { "type": "string", "maxLength": 1000, "format": "url", "pattern": "^https:\/\/.*$" },
            "previewImageUrl": { "type": "string", "maxLength": 1000, "format": "url", "pattern": "^https:\/\/.*$" },
            "area": {
              "type": "object",
              "properties": {
                "x": { "type": "number", "minimum": 0 },
                "y": { "type": "number", "minimum": 0 },
                "width": { "type": "number" },
                "height": { "type": "number" }
              }
            },
            "externalLink": {
              "type": "object",
              "properties": {
                "linkUrl": { "type": "string", "maxLength": 1000, "format": "url" },
                "label": { "type": "string", "maxLength": 30 }
              }
            }
          }
        },
        "actions": {
          "type": "array",
          "maxItems": 50,
          "items": {
            "type": "object",
            "allOf": [
              {
                "if": {
                  "properties": { "type": { "const": "uri" } }
                },
                "then": {
                  "properties": {
                    "type": { "const": "uri" },
                    "label": { "type": "string", "maxLength": 50 },
                    "linkUri": { "type": "string", "maxLength": 1000, "format": "uri" },
                    "area": { "$ref": "#/definitions/__imagemap_area" }
                  },
                  "required": ["type", "label", "linkUri", "area"],
                  "additionalProperties": false
                }
              },
              {
                "if": {
                  "properties": { "type": { "const": "message" } }
                },
                "then": {
                  "properties": {
                    "type": { "const": "message" },
                    "label": { "type": "string", "maxLength": 50 },
                    "text": { "type": "string", "maxLength": 400 },
                    "area": { "$ref": "#/definitions/__imagemap_area" }
                  },
                  "required": ["type", "label", "text", "area"],
                  "additionalProperties": false
                }
              }
            ]
          }
        }
      },
      "required": ["type", "baseUrl", "altText", "baseSize", "actions"],
      "additionalProperties": false
    },
    "__template_buttons": {
      "type": "object",
      "properties": {
        "type": { "const": "buttons" },
        "thumbnailImageUri": { "type": "string", "format": "uri", "maxLength": 1000, "pattern": "^https://.*$" },
        "imageAspectRatio": { "type": "string", "enum": ["rectangle", "square"] },
        "imageSize": { "type": "string", "enum": ["cover", "contain"] },
        "imageBackgroundColor": { "type": "string", "pattern": "^#[0-9a-fA-F]{1,6}" },
        "title": { "type": "string", "maxLength": 40 },
        "text": { "type": "string", "maxLength": 160 },
        "defaultAction": {
          "allOf": [
            { "$ref": "https://github.com/yskkin/line-json-schema/src/messaging/action.schema.json" },
            {
              "properties": {
                "label": { "maxLength": 20 }
              }
            }
          ]
        },
        "actions": {
          "type": "array",
          "items": {
            "allOf": [
              { "$ref": "https://github.com/yskkin/line-json-schema/src/messaging/action.schema.json" },
              {
                "properties": {
                  "label": { "maxLength": 20 }
                }
              }
            ]
          },
          "maxItems": 4
        }
      },
      "required": ["type", "text", "actions"],
      "additionalproperties": false
    },
    "__template_confirm": {
      "type": "object",
      "properties": {
        "type" : { "const": "confirm" },
        "text": { "type": "string", "maxLength": 240 },
        "actions": {
          "type": "array",
          "items": {
            "allOf": [
              { "$ref": "https://github.com/yskkin/line-json-schema/src/messaging/action.schema.json" },
              {
                "properties": {
                  "label": { "maxLength": 20 }
                }
              }
            ]
          }
        }
      },
      "required": ["type", "text", "actions"],
      "additionalproperties": false
    },
    "__template_carousel": {
      "type": "object",
      "properties": {
        "type": { "const": "carousel" },
        "columns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "thumbnailImageUri": { "type": "string", "format": "uri", "maxLength": 1000, "pattern": "^https://.*$" },
              "imageBackgroundColor": { "type": "string", "pattern": "^#[0-9a-fA-F]{1,6}" },
              "title": { "type": "string", "maxLength": 40 },
              "text": { "type": "string", "maxLength": 120 },
              "defaultAction": {
                "allOf": [
                  { "$ref": "https://github.com/yskkin/line-json-schema/src/messaging/action.schema.json" },
                  {
                    "properties": {
                      "label": { "maxLength": 20 }
                    }
                  }
                ]
              },
              "actions": {
                "type": "array",
                "items": {
                  "allOf": [
                    { "$ref": "https://github.com/yskkin/line-json-schema/src/messaging/action.schema.json" },
                    {
                      "properties": {
                        "label": { "maxLength": 20 }
                      }
                    }
                  ]
                },
                "maxItems": 3
              }
            },
            "required": ["text", "actions"]
          },
          "maxItems": 10
        },
        "imageAspectRatio": { "type": "string", "enum": ["rectangle", "square"]},
        "imageSize": { "type": "string", "enum": ["cover", "contain"] }
      },
      "required": ["type", "columns"],
      "additionalProperties": false
    },
    "__template_image_carousel": {
      "type": "object",
      "properties": {
        "type": { "const": "image_carousel" },
        "columns": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "imageUrl": { "type": "string", "format": "uri", "maxLength": 1000, "pattern": "^https://.*$" },
              "action": {
                "allOf": [
                  { "$ref": "https://github.com/yskkin/line-json-schema/src/messaging/action.schema.json" },
                  {
                    "properties": {
                      "label": { "maxLength": 20 }
                    }
                  }
                ]
              }
            },
            "required": ["imageUrl", "action"]
          },
          "maxItems": 10
        }
      },
      "required": ["type", "columns"],
      "additionalProperties": false
    },
    "template": {
      "type": "object",
      "properties": {
        "type": { "const": "template" },
        "altText": { "type": "string", "minLength": 1, "maxLength": 400 },
        "template": {
          "allOf": [
            {
              "if": {
                "properties": { "type": { "const": "buttons" } }
              },
              "then": { "$ref": "#/definitions/__template_buttons" }
            },
            {
              "if": {
                "properties": { "type": { "const": "confirm" } }
              },
              "then": { "$ref": "#/definitions/__template_confirm" }
            },
            {
              "if": {
                "properties": { "type": { "const": "carousel" } }
              },
              "then": { "$ref": "#/definitions/__template_carousel" }
            },
            {
              "if": {
                "properties": { "type": { "const": "image_carousel" } }
              },
              "then": { "$ref": "#/definitions/__template_image_carousel" }
            },
            {
              "properties": {
                "type": { "type": "string", "enum": ["buttons", "confirm", "carousel", "image_carousel"] }
              }
            }
          ]
        }
      },
      "required": ["type", "altText", "template"],
      "additionalProperties": false
    }
  },
  "allOf": [
    {
      "properties": {
        "type": {
          "type": "string",
          "enum": ["text", "sticker", "image", "video", "audio", "location", "imagemap", "template"]
        }
      }
    },
    {
      "if": {
        "properties": { "type": { "const": "text" } }
      },
      "then": { "$ref": "#/definitions/text" }
    },
    {
      "if": {
        "properties": { "type": { "const": "sticker" } }
      },
      "then": { "$ref": "#/definitions/sticker" }
    },
    {
      "if": {
        "properties": { "type": { "const": "image" } }
      },
      "then": { "$ref": "#/definitions/image" }
    },
    {
      "if": {
        "properties": { "type": { "const": "video" } }
      },
      "then": { "$ref": "#/definitions/video" }
    },
    {
      "if": {
        "properties": { "type": { "const": "audio" } }
      },
      "then": { "$ref": "#/definitions/audio" }
    },
    {
      "if": {
        "properties": { "type": { "const": "location" } }
      },
      "then": { "$ref": "#/definitions/location" }
    },
    {
      "if": {
        "properties": { "type": { "const": "imagemap" } }
      },
      "then": { "$ref": "#/definitions/imagemap" }
    },
    {
      "if": {
        "properties": { "type": { "const": "template" } }
      },
      "then": { "$ref": "#/definitions/template" }
    }
  ]
}
