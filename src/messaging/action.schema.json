{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/yskkin/line-json-schema/src/messaging/action.schema.json",
  "title": "Action",
  "type": "object",
  "definitions": {
    "postback": {
      "type": "object",
      "properties": {
        "type": { "const": "postback" },
        "label": { "type": "string" },
        "data": { "type": "string", "maxLength": 300 },
        "displayText": { "type": "string", "maxLength": 300 }
      },
      "required": ["type", "data"],
      "additionalProperties": false
    },
    "message": {
      "type": "object",
      "properties": {
        "type": { "const": "message" },
        "label": { "type": "string" },
        "text": { "type": "string", "maxLength": 300 }
      },
      "required": ["type", "text"],
      "additionalProperties": false
    },
    "uri": {
      "type": "object",
      "properties": {
        "type": { "const": "uri" },
        "label": { "type": "string" },
        "uri": { "type": "string", "format": "uri", "maxLength": 1000 },
        "altUri": {
          "type": "object",
          "properties": {
            "desktop": { "type": "string", "format": "uri", "maxLength": 1000 }
          }
        }
      },
      "required": ["type", "uri"],
      "additionalProperties": false
    },
    "datetimepicker": {
      "properties": {
        "type": { "const": "datetimepicker" },
        "label": { "type": "string" },
        "data": { "type": "string", "maxLength": 300 },
        "mode": {},
        "initial": {},
        "min": {},
        "max": {}
      },
      "required": ["type", "data", "mode"],
      "additionalProperties": false,
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "mode": { "const": "date" },
            "initial": { "type": "string", "format": "date" },
            "min": { "type": "string", "format": "date" },
            "max": { "type": "string", "format": "date" }
          }
        },
        {
          "type": "object",
          "properties": {
            "mode": { "const": "time" },
            "initial": { "type": "string", "pattern": "([01]\\d|2[0-3]):[0-5]\\d" },
            "min": { "type": "string", "pattern": "([01]\\d|2[0-3]):[0-5]\\d" },
            "max": { "type": "string", "pattern": "([01]\\d|2[0-3]):[0-5]\\d" }
          }
        },
        {
          "type": "object",
          "properties": {
            "mode": { "const": "datetime" },
            "initial": { "type": "string", "pattern": "(19\\d{2}|20\\d{2}|2100)-(0\\d|1[0-2])-([012]\\d|3[01])[tT]([01]\\d|2[0-3]):[0-5]\\d" },
            "min": { "type": "string", "pattern": "(19\\d{2}|20\\d{2}|2100)-(0\\d|1[0-2])-([012]\\d|3[01])[tT]([01]\\d|2[0-3]):[0-5]\\d" },
            "max": { "type": "string", "pattern": "(19\\d{2}|20\\d{2}|2100)-(0\\d|1[0-2])-([012]\\d|3[01])[tT]([01]\\d|2[0-3]):[0-5]\\d" }
          }
        }
      ]
    },
    "camera": {
      "type": "object",
      "properties": {
        "type": { "const": "camera" },
        "label": { "type": "string", "maxLength": 20 }
      },
      "required": ["type", "label"],
      "additionalProperties": false
    },
    "cameraRoll": {
      "type": "object",
      "properties": {
        "type": { "const": "cameraRoll" },
        "label": { "type": "string", "maxLength": 20 }
      },
      "required": ["type", "label"],
      "additionalProperties": false
    },
    "location": {
      "type": "object",
      "properties": {
        "type": { "const": "location" },
        "label": { "type": "string", "maxLength": 20 }
      },
      "required": ["type", "label"],
      "additionalProperties": false
    }
  },
  "oneOf": [
    { "$ref": "#/definitions/postback" },
    { "$ref": "#/definitions/message" },
    { "$ref": "#/definitions/uri" },
    { "$ref": "#/definitions/datetimepicker" },
    { "$ref": "#/definitions/camera" },
    { "$ref": "#/definitions/cameraRoll" },
    { "$ref": "#/definitions/location" }
  ]
}
